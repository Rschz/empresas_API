@model Empresas_MVC.Models.EmpresaViewModel

@{
    ViewData["Title"] = "Eliminar";
}

<h2>Eliminar</h2>

<h3 class="label label-danger"><span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span> ¿Seguro que deseas eliminar?</h3>
<div>
    <h4>Empresa: @Html.DisplayTextFor(model => model.Nombre)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Postal)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Postal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EmpresaID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index"><span class="glyphicon glyphicon-arrow-left"></span> Volver</a>
    </form>
</div>
